<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when item is checked (selected) -->
    <item android:state_checked="true" android:color="@color/green_dark"/>
    <!-- State when item is pressed (hover) -->
    <item android:state_pressed="true" android:color="@color/green_dark"/>
    <!-- Default state -->
    <item android:color="@color/green"/>
</selector>