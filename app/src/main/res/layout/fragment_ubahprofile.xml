<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/changeProfileIcon"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/profileImageView"
                android:layout_alignBottom="@id/profileImageView"
                android:layout_marginEnd="-15dp"
                android:layout_marginBottom="-5dp"
                android:contentDescription="Change Profile Icon"
                android:elevation="6dp"
                android:padding="6dp"
                android:src="@drawable/baseline_add_circle_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:elevation="4dp"
                android:clickable="true"
                android:onClick="changeProfileIcon"
                android:src="@drawable/profil_farhan" />

            <!-- Icon untuk menandakan ganti profil -->


        </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/editTextOwnerName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="Nama"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Perusahaan"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/editTextBusinessName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="Nama Perusahaan"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Telp"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/editTextPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="No. Telp"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/etAvatar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_background"
            android:gravity="start"
            android:hint="No. Telp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="Alamat"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Perusahaan"
                android:textColor="@color/green_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_background"
                android:gravity="start"
                android:hint="Deskripsi"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="250dp"
                android:layout_marginBottom="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Simpan" />
        </LinearLayout>
</androidx.core.widget.NestedScrollView>
